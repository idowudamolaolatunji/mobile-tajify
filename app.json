{
	"expo": {
		"name": "Tajify",
		"slug": "tajify-app",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/images/logo.png",
		"scheme": "myapp",
		"userInterfaceStyle": "automatic",
		"newArchEnabled": true,
		"splash": {
			"image": "./assets/images/logo.png",
			"resizeMode": "contain",
			"imageWidth": 200,
			"backgroundColor": "#0066FF",
			"color": "#fff"
		},
		"ios": {
			"supportsTablet": true,
			"infoPlist": {
				"NSCameraUsageDescription": "This app uses the camera for live streaming and video recording.",
				"NSMicrophoneUsageDescription": "This app uses the microphone for live streaming and video recording."
			}
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/images/favicon.png",
				"backgroundColor": "#000000",
				"color": "#fff"
			},
			"permissions": ["CAMERA", "RECORD_AUDIO", "android.permission.CAMERA", "android.permission.RECORD_AUDIO"]
		},
		"web": {
			"bundler": "metro",
			"output": "static",
			"favicon": "./assets/images/favicon.png"
		},
		"plugins": [
			"expo-router",
			[
				"expo-splash-screen",
				{
					"image": "./assets/images/logo.png",
					"imageWidth": 200,
					"resizeMode": "contain",
					"backgroundColor": "#000000"
				}
			]
		],
		"experiments": {
			"typedRoutes": true
		}
	}
}
